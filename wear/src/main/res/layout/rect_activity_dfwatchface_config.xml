<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deep.dark.lonelybrewer.LBWFConfigActivity"
    tools:deviceIds="wear_square"
    android:padding="5dp">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switchText"
        android:id="@+id/timeModeSwitch"
        android:layout_gravity="top|center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center|left">

        <TextView
            android:id="@+id/barrelColourLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/barrelColourText"/>

        <android.support.wearable.view.CircledImageView
            android:id="@+id/barrelColour"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            app:circle_border_color="@color/color_item_circle_border_color"
            app:circle_radius="21dp"
            app:circle_border_width="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/magmaColourLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/magmaColourText"/>

        <android.support.wearable.view.CircledImageView
            android:id="@+id/magmaColour"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            app:circle_border_color="@color/color_item_circle_border_color"
            app:circle_radius="21dp"
            app:circle_border_width="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center|right">

        <TextView
            android:id="@+id/cropsColourLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cropsColourText"/>

        <android.support.wearable.view.CircledImageView
            android:id="@+id/cropsColour"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            app:circle_border_color="@color/color_item_circle_border_color"
            app:circle_radius="21dp"
            app:circle_border_width="1dp"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonText"
        android:id="@+id/okButton"
        android:layout_gravity="bottom|center"
    />
</FrameLayout>
